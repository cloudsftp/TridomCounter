<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.melon.tridomcounter">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.menu.MainActivity"
                android:label="@string/menu_title"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="de.melon.tridomcounter.activities.session.NewSessionActivity"
                android:label="@string/newsession_title"
                android:parentActivityName="de.melon.tridomcounter.activities.menu.MainActivity" >
        </activity>
    </application>

</manifest>