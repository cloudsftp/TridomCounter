<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="@dimen/card_padding_top"
        android:paddingLeft="@dimen/card_padding_side"
        android:paddingRight="@dimen/card_padding_side"
        android:paddingBottom="@dimen/card_padding_bottom">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_card"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:contentPaddingLeft="@dimen/card_padding_content_vertical"
            app:contentPaddingRight="@dimen/card_padding_content_vertical"
            app:contentPaddingTop="@dimen/card_padding_content_horizontal"
            app:contentPaddingBottom="@dimen/card_padding_content_horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/sessionNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/place_holder"
                    android:textColor="@color/color_text" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>